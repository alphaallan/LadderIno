<Window x:Class="Ladderino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:LDComponents="clr-namespace:ComponentUI;assembly=ComponentUI"
        Title="MainWindow" Height="350" Width="525" Background="#FFFAFAFA" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="_New"/>
                <MenuItem Header="_Open"/>
                <MenuItem Header="_Save"/>
                <MenuItem Header="Save As"/>
                <Separator />
                <MenuItem Header="E_xit"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo"/>
                <MenuItem Header="Redo"/>
                <Separator />
                <MenuItem Header="Insert Rung Before"/>
                <MenuItem Header="Insert Rung After"/>
                <MenuItem Header="Move Rung Up"/>
                <MenuItem Header="Move Rung Down"/>
                <Separator />
                <MenuItem Header="Delete Selected Element"/>
                <MenuItem Header="DeleteRung"/>

            </MenuItem>
        </Menu>

        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <LDComponents:ComponentUIBase x:Name="comp" ActiveBrush="Red"/>
                <LDComponents:ComponentUIBase x:Name="comp2" ActiveBrush="Red"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <LDComponents:ComponentUIBase ActiveBrush="Red"/>
                <LDComponents:ComponentUIBase ActiveBrush="Red"/>
                <LDComponents:VerticalWire />
            </StackPanel>
        </StackPanel>
        
        
    </Grid>
</Window>
